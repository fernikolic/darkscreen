{
  "name": "clawdentials",
  "description": "Trust layer for the AI agent economy - escrow, reputation, and analytics",

  "rateLimits": {
    "maxCallsPerHour": 100,
    "pauseOnRateLimit": true,
    "cooldownMinutes": 15
  },

  "circuitBreaker": {
    "enabled": true,
    "maxConsecutiveErrors": 5,
    "resetAfterMinutes": 10
  },

  "exitConditions": {
    "requireBothIndicators": true,
    "completionPatterns": [
      "all tasks completed",
      "phase complete",
      "implementation complete",
      "nothing left to build"
    ],
    "maxIterations": 50,
    "maxHours": 4
  },

  "claudeCode": {
    "model": "opus",
    "settingsPath": ".claude/settings.json",
    "continueOnPartialCompletion": true
  },

  "notifications": {
    "onComplete": true,
    "onError": true,
    "onRateLimit": true
  }
}
